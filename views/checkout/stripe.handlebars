<div class="breadcrumb">
  <div class="container">
    <a class="breadcrumb-item" href="/index">Home</a>
    <a class="breadcrumb-item" href="/product/cart">Cart</a>
    <a class="breadcrumb-item" href="/product/checkout">Checkout</a>
    <a class="breadcrumb-item" href="/product/selectPayment"> Select Payment</a>
    <span class="breadcrumb-item active"> Stripe </span>
  </div>
</div>
<div class="container">
<form id="payment-form" method="POST" action="/product/stripepayment">
<h2> <i class="fa fa-cc-stripe"> </i> Payment </h2>
<br>
<input id="customer-name" value="{{user.name}}" hidden> 
<div class="row"> 
    <div class="col-lg-1"></div>
<div id="card-element" class="col-lg-8">
    <!-- Elements will create input elements here -->
</div>
<button id="submit" onclick=confirmStripe(card123) value="{{client_secret}}" class="btn btn-danger col-lg-2"
    style="line-height:5px;" disabled>Pay</button>
<div class="col-lg-1"></div>
</div>


<!-- We'll put the error messages in this element -->
<div id="card-errors" role="alert"></div>
</form>

<script src="/js/stripe_functions.js">
</script>
<script src="/js/stripe_client.js"> </script>
</div>


