<div class="breadcrumb">
    <div class="container">
        <a class="breadcrumb-item" href="/">Home</a>
        <a class="breadcrumb-item" href="/user/admin">Admin Page</a>
        <a class="breadcrumb-item" href="/user/orderHistoryAdmin">Order History - Admin</a>
        <span class="breadcrumb-item active">Delivery Information - Admin</span>
    </div>
</div>
<section class="static about-sec">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <h1>Delivery Information - Admin</h1>
            </div>
            <div class="col-md-3">
                <button type="button" class="close" style="font-size: 2.5em;" aria-label="Close"
                    onclick="window.location.href='https://localhost:5000/user/orderHistoryAdmin'">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <h3>Delivery Status - <span class="{{progressColourText}}">{{deliveryStatusResult}}</span></h3>
                <br>
                <div class="progress">
                    <div class="progress-bar {{progressColour}}" style="width: {{progressPercentage}}%"
                        role="progressbar" aria-valuenow="{{progressPercentage}}" aria-valuemin="0" aria-valuemax="100">
                    </div>
                </div>
                <br>
                <p>Check <a href="{{trackingURL}}">here</a> for more delivery information.</p>
                <br>
                <hr>
                {{#if orderitems}}
                {{#each orderitems}}
                <div class="row">
                    <div class="col-md-2">
                        <a href="{{product_image}}">
                            <img src="{{product_image}}" class="img">
                        </a>
                    </div>
                    <div class="col-md-10">
                        <div class="row">
                            <div class="col-md-10">
                                <h4>{{product_name}}</h4>
                                <p>{{author}} | {{publisher}}</p>
                                <p>{{genre}}</p>
                            </div>
                            <div class="col-md-2">
                                <p>Qty: {{stock}}</p>
                                <p class="price">${{price}}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                {{/each}}
                <p> </p>
                <p></p>
                {{else}}
                <h3>No Items In Cart</h3>
                <hr>
                {{/if}}
            </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-sm-6 text-center">
                        <a href="/delivery/displayLabelUrl/{{order.shippingId}}">
                            <svg width="5em" height="5em" viewBox="0 0 16 16" class="bi bi-file-richtext"
                                fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                    d="M4 1h8a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2zm0 1a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1H4z" />
                                <path fill-rule="evenodd"
                                    d="M4.5 11.5A.5.5 0 0 1 5 11h3a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zm0-2A.5.5 0 0 1 5 9h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zm1.639-3.708l1.33.886 1.854-1.855a.25.25 0 0 1 .289-.047l1.888.974V7.5a.5.5 0 0 1-.5.5H5a.5.5 0 0 1-.5-.5V7s1.54-1.274 1.639-1.208zM6.25 5a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5z" />
                            </svg>
                        </a>
                    </div>
                    <div class="col-sm-6 text-center">
                        <a href="/delivery/printLabelPDF/{{order.shippingId}}"><svg width="5em" height="5em"
                                viewBox="0 0 16 16" class="bi bi-printer" fill="currentColor"
                                xmlns="http://www.w3.org/2000/svg">
                                <path
                                    d="M11 2H5a1 1 0 0 0-1 1v2H3V3a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v2h-1V3a1 1 0 0 0-1-1zm3 4H2a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h1v1H2a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-1v-1h1a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1z" />
                                <path fill-rule="evenodd"
                                    d="M11 9H5a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1zM5 8a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H5z" />
                                <path d="M3 7.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z" />
                            </svg>
                        </a>
                    </div>
                </div>
                <hr>
                {{#if order}}
                <div class="right-sidebar">
                    <h3>Delivery Address</h3>
                    <hr>
                    <div class="row">
                        <div class="col">
                            <p>Order ID: {{order.id}}</p>
                            <p>Name: {{order.fullName}}</p>
                            <p>{{order.address}}</p>
                            <p>{{order.address1}}</p>
                            <p>City: {{order.city}}</p>
                            <p>Country: {{order.country}}</p>
                        </div>
                    </div>
                </div>
                <div class="right-sidebar">
                    <h3>Shipping Information</h3>
                    <hr>
                    <div>
                        <p>Order Date: {{formatDate order.dateStart 'DD MMM YYYY'}}</p>
                        <p>USPS Tracking Code: </p>
                        <p>{{order.trackingCode}}</p>
                        <p>EasyPost Tracking Code: </p>
                        <p>{{order.trackingId}}</p>

                    </div>
                </div>
                <div class="right-sidebar">
                    <h3>Total Price</h3>
                    <hr>
                    <div class="row">
                        <div class="col">
                            <p>Subtotal: ${{order.subtotalPrice}}</p>
                            <p>Delivery Fee: Free</p>
                            <p>Total: ${{order.totalPrice}}</p>
                        </div>
                    </div>
                </div>
                {{else}}
                <p>There is no order</p>
                {{/if}}
            </div>
        </div>
    </div>
</section>