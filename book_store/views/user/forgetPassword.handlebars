<section class="static about-sec">
    <div class="container">
        <h1>Forgot password</h1>
        <h3>
            <div id="g-recaptcha-error"></div>
            <!--- might want to put message here--->
        </h3>
        <div class="form">
            <div class="row">
                <div class="col-3">
                </div>
                <div class="col-md-6">
                    <form method="POST" action="/user/forgetpassword" onsubmit="return submitUserForm();">
                        <div class="form-group">
                            <label for="email">E-mail</label>
                            <input type="email" name="email" class="form-control" required>
                        </div>
                        <div class="g-recaptcha" data-sitekey="6Le367IZAAAAAPdbALKH99mQXdhrk7FhIhgzIwkw"
                    data-callback="verifyCaptcha"></div>
                        <button class="btn black" type="submit">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>