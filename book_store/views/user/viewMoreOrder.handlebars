<div class="breadcrumb">
    <div class="container">
        <a class="breadcrumb-item" href="/">Home</a>
        <a class="breadcrumb-item" href="/user/userPage">User Page</a>
        <a class="breadcrumb-item" href="/user/orderHistory">Order History</a>
        <span class="breadcrumb-item active">Delivery Information</span>
    </div>
</div>
<section class="static about-sec">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <h1>Delivery Information</h1>
            </div>
            <div class="col-md-3">
                <button type="button" class="close" style="font-size: 2.5em;" aria-label="Close"
                    onclick="window.location.href='https://localhost:5000/user/orderHistory'">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <h3>Delivery Status - <span class="{{progressColourText}}">{{deliveryStatusResult}}</span></h3>
                <br>
                <div class="progress">
                    <div class="progress-bar {{progressColour}}" style="width: {{progressPercentage}}%"
                        role="progressbar" aria-valuenow="{{progressPercentage}}" aria-valuemin="0" aria-valuemax="100">
                    </div>
                </div>
                <br>
                <p>Check <a href="{{trackingURL}}">here</a> for more delivery information.</p>
                <br>
                <hr>
                {{#if orderitems}}
                {{#each orderitems}}
                <div class="row">
                    <div class="col-md-2">
                        <a href="{{product_image}}">
                            <img src="{{product_image}}" class="img">
                        </a>
                    </div>
                    <div class="col-md-10">
                        <div class="row">
                            <div class="col-md-10">
                                <h4>{{product_name}}</h4>
                                <p>{{author}} | {{publisher}}</p>
                                <p>{{genre}}</p>
                            </div>
                            <div class="col-md-2">
                                <p>Qty: {{stock}}</p>
                                <p class="price">${{price}}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                {{/each}}
                <p> </p>
                <p></p>
                {{else}}
                <h3>No Items In Cart</h3>
                <hr>
                {{/if}}
            </div>
            <div class="col-md-4">
                {{#if order}}
                <div class="right-sidebar">
                    <h3>Delivery Address</h3>
                    <hr>
                    <div class="row">
                        <div class="col">
                            <p>Order ID: {{order.id}}</p>
                            <p>Name: {{order.fullName}}</p>
                            <p>{{order.address}}</p>
                            <p>{{order.address1}}</p>
                            <p>City: {{order.city}}</p>
                            <p>Country: {{order.country}}</p>
                        </div>
                    </div>
                </div>
                <div class="right-sidebar">
                    <h3>Shipping Information</h3>
                    <hr>
                    <div>
                        <p>Order Date: {{formatDate order.dateStart 'DD MMM YYYY'}}</p>
                        <p>USPS Tracking Code: </p>
                        <p>{{order.trackingCode}}</p>
                        <p>EasyPost Tracking Code: </p>
                        <p>{{order.trackingId}}</p>

                    </div>
                </div>
                <div class="right-sidebar">
                    <h3>Total Price</h3>
                    <hr>
                    <div class="row">
                        <div class="col">
                            <p>Subtotal: ${{order.subtotalPrice}}</p>
                            <p>Delivery Fee: Free</p>
                            <p>Total: ${{order.totalPrice}}</p>
                        </div>
                    </div>
                </div>
                {{else}}
                <p>There is no order</p>
                {{/if}}
            </div>
        </div>
    </div>
</section>