<div class="breadcrumb">
    <div class="container">
        <a class="breadcrumb-item" href="/">Home</a>
        <a class="breadcrumb-item" href="/user/admin">Admin Page</a>
        <span class="breadcrumb-item active">Order History - Admin</span>
    </div>
</div>
<section class="static about-sec">
    <div class="container">
        <div class="row">
            <div class="tab col-12 col-md-2">
                <button class="tab navi">Navigation</button>
                <a href="/user/userPage">
                    <button class="inactive-tab">User Page</button>
                </a>
                <a href="/user/userPage/changeinfo">
                    <button class="inactive-tab">Change Info</button>
                </a>
                <a href="/user/userPage/changeaddress">
                    <button class="inactive-tab">Set Address</button>
                </a>
                <a href="/user/userRecentOrder">
                    <button class="active-tab">Order History</button>
                </a>
                <a href="/user/userPage/wishlist">
                    <button class="inactive-tab">Wishlist</button>
                </a>
            </div>
            <div id="recentOrders" class="col-10">
                <br>
                <h2>Order History - Admin</h2>
                <br>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" id="searchOrderInput" onkeyup="searchOrderFunction()"
                        type="search" placeholder="Search Order No" aria-label="Search">
                </form>
                <br>
                {{log 'cartItems' cartItem}}
                <div id="myItems">
                    {{#if order}}
                    {{#each order}}
                    <div class="card mb-4" id="myItems">
                        {{!-- <div class="card-header">
                        Order No: {{id}}
                    </div> --}}
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-10">
                                    <h5 class="card-title">Order No: {{id}}</h5>
                                </div>
                                <div class="col-md-2 mb-4">
                                    <button class="card-link"
                                        style="background-color:white;border:none; text-align:center; display:inline-block;"
                                        data-toggle="collapse" data-target="#collapse{{id}}" aria-expanded="false"
                                        aria-controls="collapse{{id}}">More Info <svg width="1em" height="1em"
                                            viewBox="0 0 16 16" class="bi bi-chevron-down" fill="currentColor"
                                            xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd"
                                                d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z" />
                                        </svg>
                                    </button>
                                </div>
                            </div>
                            <h6 class="card-subtitle mb-2 text-muted">Tracking ID: {{trackingId}}</h6>
                            <p class="card-text">Order Date: {{formatDate dateStart 'DD MMM YYYY'}}</p>
                            <p class="card-text">Delivery Status: {{formatDeliveryStatus deliveryStatus}}</p>
                            <div class="text-right">
                                <a href="/delivery/viewMoreOrderAdmin/{{id}}">View More <svg width="1em" height="1em"
                                        viewBox="0 0 16 16" class="bi bi-chevron-right" fill="currentColor"
                                        xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd"
                                            d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z" />
                                    </svg></a>
                            </div>
                        </div>
                        <div class="accordion toggle" id="orderAccordion">
                            <div id="collapse{{id}}" class="collapse" aria-labelledby="heading{{id}}"
                                data-parent="#orderAccordion">
                                <hr>
                                <div class="card-body">
                                    <h5 class="card-title">Product Information</h5>
                                    {{#each orderitems}}
                                    <div class="row">
                                        <div class="col-md-2"><img class="card-img"
                                                src="{{product_image}}"
                                                alt="bookCover"></div>
                                        <div class="col-md-10">
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <h6 class="card-text">{{product_name}}</h6>
                                                    <p class="card-text">{{author}} | {{publisher}}</p>
                                                </div>
                                                <div class="col-md-4">
                                                    <p class="card-text">Qty: {{stock}}</p>
                                                    <p class="card-text">${{price}}</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {{/each}}
                                </div>
                                <div class="card-footer">
                                    <div class="row">
                                        <div class="col-md-9">
                                            <h5 class="card-title">Address Information</h5>
                                            <address>
                                                {{address}}
                                                <br>
                                                {{address1}}, {{city}}, {{country}}
                                                <br>
                                                {{phoneNumber}}
                                            </address>
                                        </div>
                                        <div class="col-md-3">
                                            <p class="card-text">Subtotal: ${{subtotalPrice}}</p>
                                            <p class="card-text">Delivery Fee: Free</p>
                                            <p class="card-text">Total Price: ${{totalPrice}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    {{else}}
                    <p>There is no current orders</p>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</section>