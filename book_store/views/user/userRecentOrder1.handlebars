<div class="breadcrumb">
    <div class="container">
        <a class="breadcrumb-item" href="/">Home</a>
        <span class="breadcrumb-item active">Order History</span>
    </div>
</div>
<section class="static about-sec">
    <div class="container">
        <div class="row">
            <div class="tab col-12 col-md-2">
                <button class="tab">Navigation</button>
                <a href="/user/userPage">
                    <button class="inactive-tab">User Info</button>
                </a>
                <a href="/user/userRecentOrder">
                    <button class="active-tab">Order History</button>
                </a>
                <a href="/user/userCart">
                    <button class="inactive-tab">Cart</button>
                </a>
            </div>
            <div id="recentOrders" class="col-10">
                <br>
                <h2>Order History</h2>
                <br>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" id="searchOrderInput" onkeyup="searchOrderFunction()"
                        type="search" placeholder="Search Order No" aria-label="Search">
                </form>
                <br>
                {{#if order}}
                {{#each order}}
                <div class="card mb-4">
                    {{!-- <div class="card-header">
                        Order No: {{id}}
                    </div> --}}
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-10">
                                <h5 class="card-title">Order No: {{id}}</h5>
                            </div>
                            <div class="col-md-2">
                                <button class="card-link" data-toggle="collapse" data-target="#collapse{{id}}"
                                    aria-expanded="false" aria-controls="collapse{{id}}">More Info<i
                                        class="fas fa-chevron-down"></i>
                                </button>
                            </div>
                        </div>
                        <h6 class="card-subtitle mb-2 text-muted">Shipping ID: {{shippingId}}</h6>
                        <p class="card-text">Order Date: {{formatDate dateStart 'DD MMM YYYY'}}</p>
                        <p class="card-text">Delivery Status: {{capitaliseFirstLetter deliveryStatus}}</p>
                        <div class="text-right">
                            <a href="/delivery/viewMoreOrder/{{id}}">Order Information <i class="fa fa-chevron-right"
                                    aria-hidden="true"></i></a>
                        </div>
                    </div>
                    <div class="accordion toggle" id="orderAccordion">
                        <div id="collapse{{id}}" class="collapse" aria-labelledby="heading{{id}}"
                            data-parent="#storyAccordion">
                            <div class="card-body">
                                <h5 class="card-title">Product Information</h5>
                                <p class="card-text">hello world</p>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Address Information</h5>
                                <p class="card-text">{{address}}</p>
                                <p class="card-text">{{address1}}</p>
                                <p class="card-text">{{city}}</p>
                                <p class="card-text">{{country}}</p>
                                <p class="card-text">{{postalCode}}</p>
                            </div>
                        </div>
                    </div>
                    {{!-- <div class="card-footer text-right">
                        <btn>hello</btn>
                    </div> --}}
                </div>
                {{/each}}
                {{else}}
                <p>There is no current orders</p>
                {{/if}}
            </div>
        </div>
    </div>
</section>