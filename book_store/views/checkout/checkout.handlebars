<div class="container">
  <form id="payment-form" method="POST" action="#">
    <h2> Shipping Address </h2>
      {{!-- method="POST" action="/product/checkout" --}}
      <div class="form-group">
        <label for="product_name" onclick="getBook()">Product Name:</label>
        {{!-- <a href="#" onclick="getBook()" tabindex="-1" class="card-link">
						<i class="fas fa-film"></i>
						Get Book
					</a> --}}
        <input type="text" name="fullName" class="form-control" id="product_name" required>
      </div>
      <div class="form-group">
        <label for="product_image">Phone Number:</label>
        <input type="text" name="phoneNumber" class="form-control" id="product_image" required>
      </div>

      <div class="form-group">
        <label for="author">Address:</label>
        <input type="text" name="address" class="form-control" id="author" required>
      </div>
      <div class="form-group">
        <label for="publisher">Address #2:</label>
        <input type="text" name="address1" class="form-control" id="publisher" required>
      </div>
      <div class="form-group">
        <label for="genre">Country:</label>
        <input type="text" name="country" class="form-control" id="genre" required>
      </div>
      <div class="form-group">
        <label for="price">City:</label>
        <input type="text" name="city" class="form-control" id="price" required>
      </div>
      <div class="form-group">
        <label for="stock">Postal Code:</label>
        <input type="text" name="postalCode" class="form-control" id="stock" required>
      </div>
      <h2> Payment </h2>
      <br>
      <div id="card-element">
        <!-- Elements will create input elements here -->
      </div>

      <!-- We'll put the error messages in this element -->
      <div id="card-errors" role="alert"></div>
      <button id="submit" onclick=confirmStripe(card123) value="{{client_secret}}" class="btn btn-danger" disabled>Pay</button>
    </form>
</div>

<script src="/js/stripe_functions.js">
</script>
<script src="/js/stripe_client.js"> </script>