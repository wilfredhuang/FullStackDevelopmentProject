<div class="container">
    <!-- First Section -->
    <div class="card-header d-flex row">
        <div class="d-flex align-items-center col-xs-6">
            <i class="fa fa-shopping-cart pr-2" aria-hidden="true"></i>
            <span>
                Shopping Cart
            </span>
        </div>
        <div class="col-xs-6 ml-auto">
            <div><input type="submit" class="btn btn-default" value="Continue Shopping"></div>
        </div>
    </div>
    <!-- End of First Section -->
    <!-- Second Section (Display Product Row) -->
    <div class="card-body d-flex flex-row row">
        <div class="col-lg-3">
            <img class="img-responsive" src="/images/r1.jpg" alt="prewiew" width="120" height="80">
        </div>
        <div class="col-lg-3">
            <p> Product Name </p>
            <p> Author </p>
            <p> Genre </p>
        </div>
        <div class="col-lg-3">
            <p> Product Price </p>
        </div>
        <div class="col-lg-3 quantity">
            <div class="row">
                <div class="col-3">
                    <input type="number" step="1" max="99" min="1" value="1" title="Qty" class="qty" size="4">
                    <div class="row">
                        <div class="col-6">
                            <input type="button" value="+" class="plus">
                        </div>
                        <div class="col-6">
                            <input type="button" value="-" class="minus">
                        </div>

                    </div>
                </div>
                <div class="col-4">
                </div>
                <div class="col-5">
                    <button type="button" class="btn btn-outline-danger btn-xs">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- End of Second Section -->
    <!-- Third Session Fee Calculation -->
    <hr>
    <div class="card-body d-flex flex-row row mt-5">
        <div class="col-6">
        </div>
        <div class="col-3">
            <p> Subtotal Price </p>
        </div>
        <div class="col-3">
            <p>$500 </p>
        </div>
    </div>
    <div class="card-body d-flex flex-row row">
        <div class="col-6">
        </div>
        <div class="col-3">
            <p> Shipping Fee </p>
        </div>
        <div class="col-3">
            <p>$500 </p>
        </div>
    </div>
    <div class="card-body d-flex flex-row row">
        <div class="col-6">
        </div>
        <div class="col-3">
            <p> Discount </p>
        </div>
        <div class="col-3">
            <p>$0 </p>
        </div>
    </div>
    <div class="card-body d-flex flex-row row">
        <div class="col-6">
        </div>
        <div class="col-3">
            <strong> Total </strong>
        </div>
        <div class="col-3">
            <hr>
            <p>$600 </p>
        </div>
    </div>
    <!-- End of third session -->

    <!-- Fourth Section Promo Code -->
    <div class="card-footer d-flex flex-row row">
        <div class="col-3"><input type="text" class="form-control" placeholder="Coupon Code"></div>
        <div class="col-4" align="left"><input type="submit" class="btn btn-default" value="Use Coupon"></div>
        <div class="col-5" align="right"><input type="submit" class="btn btn-default" value="Checkout"></div>
    </div>
    <!-- End of Fourth Section -->
</div>