{{#unless (emptyCart userCart) }} <!-- unless is the inverse of if, block would only render if value is false -->
    <div class="cart page">
        <ul class="list-group">
            {{#each userCart}}
            <li class="list-group-item clearfix">
                <div class="col-xs-5">
                    <strong>{{Name}}</strong><br/>
                    <img src="/img/{{Image}}.jpg" width="100" height="100">
                    <em>Description here</em>
                </div>
                <div class="col-xs-2 text-right">
                    <span class="badge">{{ Quantity }}</span>
                </div>
                <div class="col-xs-3 text-right">
                    ${{ SubtotalPrice }}
                </div>
                <div class="col-xs-2 text-right">
                    <a href="/products/delete/{{ID}}" class="btn btn-default"></i> Remove</a>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="text-right">
        <strong>Total:${{full_total_price}}</strong>
    </div>
    <hr>
    <div class="text-right">
        <a href="/products/checkout" type="button" class="btn btn-success">Checkout</a>
    </div>

{{else}}
    Your shopping cart is empty.
{{/unless}}
