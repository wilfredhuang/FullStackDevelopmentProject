<div class="container">
    <form method="POST" action="#">
        <div class="row mt-2">
            <div class="col-8">
                <h2 id="coupon_header"> Create Coupon </h2>
                {{!-- <h2 id="discount_header" hidden> Create Discount </h2> --}}
            </div>
            {{!-- <div class="col-4 mt-2">
