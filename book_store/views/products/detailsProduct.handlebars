<div class="breadcrumb">
    <div class="container">
        <a class="breadcrumb-item" href="/product/listProductAdmin">Product Page Admin</a>
        <span class="breadcrumb-item active">Retrieve Product</span>
        <a class="breadcrumb-item" href="/product/createProduct">Add product</a>

    </div>
</div>
<section class="product-sec">
    <div class="container">
        <h1>Product Details</h1>
        <div class="row">
            <div class="col-md-6 slider-sec">
                <img src="{{product.product_image}}" class="img-fluid" width="360" length="192">
            </div>
            <div class="col-md-6 slider-content">
                <p>Product ID: {{product.id}}</p>
                <p>Product Name: {{product.product_name}}</p>
                <p>Author: {{product.author}}</p>
                <p>Publisher: {{product.publisher}}</p>
                <p>Genre: {{product.genre}}</p>
                <p>Price: {{product.price}}</p>
                <p>Stocks: {{product.stock}}</p>
                <p>Weight: {{product.weight}}</p>
                <p>Rating: {{product.rating}}</p>
                <p>Specific Details: {{product.details}}</p>



                <div class="btn-sec">
                    <a href="/product/updateProductAdmin/{{product.id}}" class="btn btn-warning">Update</a>
                    <a href="/product/delete/{{product.id}}" class="btn btn-warning" data-toggle="confirmation"
                        data-title="Confirm delete?">
                        <i class="far fa-trash-alt"></i>
                        Delete
                    </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>