<div class="breadcrumb">
  <div class="container">
    <a class="breadcrumb-item" href="/index">Home</a>
    <span class="breadcrumb-item">Cart</span>
    <span class="breadcrumb-item active">Checkout</span>
  </div>
</div>
<section class="product-sec">
  <div class="container">
    <h1>Checkout</h1>
    <div class="row">
      <div class="col-8">
        <form method="post" action="/delivery/processCheckout">
          <h3>Delivery Address</h3>
          <br>
          <div class="form-group control-label">
            <label for="fullName">Full Name:</label>
            <input type="text" name="fullName" class="form-control" required>
          </div>
          <div class="form-group control-label">
            <label for="email">Email:</label>
            <input type="email" name="email" class="form-control" required>
          </div>
          <div class="form-group control-label">
            <label for="phoneNumber">Phone Number:</label>
            <input type="text" name="phoneNumber" class="form-control" required>
          </div>
          <div class="form-group control-label">
            <!--- Op in to mailing list --->
          </div>
          <div class="form-group control-label">
            <label for="address1">Address Line 1:</label>
            <input type="text" name="address1" class="form-control" required>
            <p>E.g. Street Address, PO box, company name, c/o</p>
          </div>
          <div class="form-group control-label">
            <label for="address2">Address Line 2:</label>
            <input type="text" name="address2" class="form-control" required>
            <p>E.g. apartment, suite, unit, building, floor</p>
          </div>
          <div class="form-group control-label">
            <label for="city">City:</label>
            <input type="text" name="city" class="form-control" required>
          </div>
          <div class="form-group control-label">
            <label for="country">Country:</label>
            <input type="text" name="country" class="form-control" required>
          </div>
          <div class="form-group control-label">
            <label for="postalCode">Postal Code:</label>
            <input type="text" name="postalCode" class="form-control" required>
          </div>
          <h3>Biling Address</h3>
          <br>
          <div class="form-group control-label">
            <label for="fullName">Full Name:</label>
            <input type="text" name="fullNameB" class="form-control" >
          </div>
          <div class="form-group control-label">
            <label for="email">Email:</label>
            <input type="email" name="emailB" class="form-control" >
          </div>
          <div class="form-group control-label">
            <label for="phoneNumber">Phone Number:</label>
            <input type="text" name="phoneNumberB" class="form-control" >
          </div>
          <div class="form-group control-label">
            <!--- Op in to mailing list --->
          </div>
          <div class="form-group control-label">
            <label for="address1">Address Line 1:</label>
            <input type="text" name="address1B" class="form-control" >
            <p>E.g. Street Address, PO box, company name, c/o</p>
          </div>
          <div class="form-group control-label">
            <label for="address2">Address Line 2:</label>
            <input type="text" name="address2B" class="form-control" >
            <p>E.g. apartment, suite, unit, building, floor</p>
          </div>
          <div class="form-group control-label">
            <label for="city">City:</label>
            <input type="text" name="cityB" class="form-control" >
          </div>
          <div class="form-group control-label">
            <label for="country">Country:</label>
            <input type="text" name="countryB" class="form-control" >
          </div>
          <div class="form-group control-label">
            <label for="postalCode">Postal Code:</label>
            <input type="text" name="postalCodeB" class="form-control" >
          </div>
          <h3>Payment</h3>
          <br>
          <div class="form-group control-label">
            <label for="cardType">Card Type:</label>
            <select id="cardType" name="cardType" class="form-control">
              <option value="visa">Visa</option>
              <option value="masterCard">Master Card</option>
              <option value="3">Option 3</option>
              <option value="4">Option 4</option>
            </select>
          </div>
          <div class="form-group control-label">
            <label for="cardNumber">Card Number</label>
            <input type="text" name="cardNumber" class="form-control" required>
          </div>
          <div class="form-group control-label">
            <label for="expiryDate">Expiry Date:</label>
            <input type="date" name="expiryDate" class="form-control" required>
          </div>
          <div class="form-group control-label">
            <label for="cardName">Name on card:</label>
            <input type="text" name="cardName" class="form-control" required>
          </div>
          <div class="form-group control-label">
            <label for="cvv2number">CVV 2 Number:</label>
            <input type="text" name="cvv2number" class="form-control" required>
          </div>
          <input type="submit" value="Submit" class="btn btn-primary" />
        </form>
      </div>
      <div class="col-4">
        <div>
          <h3>Cart</h3>
          <br>
          <div class="row">
            <p class="col">Items</p>
            <p class="col">Price</p>
          </div>
          <hr>
          {{#if cartItem}}
          {{#each cartItem}}
          <div class="row">
          <p class="col">{{title}}</p>
          <p class="col">{{price}}</p>
          </div>
          {{/each}}
          <hr>
          <div class="row">
            <h6 class="col" id="deliveryFee">Delivery Fee:</h6>
            <p class="col"></p>
          </div>
          <br>
          <div class="row">
            <h6 class="col" id="totalPrice">Total Price:</h6>
            <p class="col"></p>
          </div>
          {{else}}
          <h6>No items in cart</h6>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</section>